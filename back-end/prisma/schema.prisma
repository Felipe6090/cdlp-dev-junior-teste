generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  created_datetime DateTime @default(now())
  username         String
  password         String
  posts            Posts[]

  RefreshToken RefreshToken[]
  @@map("users")
}

model Posts {
  id               String   @id @default(uuid())
  created_datetime DateTime @default(now())
  User             User     @relation(fields: [userId], references: [id])
  userId           String
  title            String
  content          String

  @@map("posts")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique

  @@map("refreshToken")
}
